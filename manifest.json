{
  "manifest_version": 2,

  "name": "Aptitude Plugin",
  "description": "This extension will record your online behaviour and reflect the information back to you in real-time.",
  "version": "1.0",
  
  "content_scripts": 
  [
    {
      "matches": 
	  [
        "<all_urls>"
      ],
	  
      "js": 
	  [
		"jquery-2.1.3.min.js", 
	    "content.js"
	  ]
    }
  ],
  
  "browser_action": 
  {
   "default_icon": "eye-icon.png",
   "default_popup": "popup.html"
  },
  
  "permissions": 
  [
   "activeTab",
   "tabs",
   "browsingData",
   "idle",
   "storage",
   "storage"
   ]
  
}